<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/recent_container_height"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recent_title_height"
        android:gravity="center"
        android:text="@string/last_arrivals"
        android:textColor="@color/textColorPrimary" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recent_item_size"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:clipToPadding="false"
        android:paddingLeft="@dimen/recycler_padding"
        android:paddingRight="@dimen/recycler_padding" />

</LinearLayout>